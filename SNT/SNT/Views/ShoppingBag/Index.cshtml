@model SNT.Models.SntUser
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ShoppingBag</h1>

<h4>ShoppingBagHomeViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
            @foreach(var tyre in Model.ShoppingBag.Tyres)
            {
                <p>@tyre.Tyre.Picture</p>
                <p>@tyre.Tyre.Model</p>
                <p>@tyre.Tyre.Brand</p>
                <p>@tyre.Tyre.Price</p>
                <p>@tyre.Quantity</p>
            }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
