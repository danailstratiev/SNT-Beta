@model SNT.ViewModels.Confirm.OrderConfirmViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>OrderConfirmViewModel</h4>
    <hr />
    <dl class="row">
       
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfCreation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOfCreation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DeliveryDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DeliveryDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DeliveryAddress)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DeliveryAddress)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ClientName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClientName)
        </dd>
        <dt class = "col-sm-2">
            Tyres
        </dt>
        <dd class="col-sm-10">
            @foreach (var tyre in Model.Tyres)
            {
                <p>@tyre.Model</p>
                <p>@tyre.Brand</p>
                <p>@tyre.Price</p>
                <p>@tyre.Quantity</p>
            }
        </dd>
        
        <dt class = "col-sm-2">
            WheelRims
        </dt>
        <dd class="col-sm-10">
            @foreach (var wheelRim in Model.WheelRims)
            {
                <p>@wheelRim.Model</p>
                <p>@wheelRim.Brand</p>
                <p>@wheelRim.Price</p>
                <p>@wheelRim.Quantity</p>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderStage)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderStage)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Comment)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Comment)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sum)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sum)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Back to List</a>


    <p><a href="/ShoppingBag/Index">ShoppingBag</a></p>
    <p></p>
    <p><a href="/Receipt/Details">Confirm Order</a></p>
</div>
