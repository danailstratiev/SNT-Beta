@model SNT.ViewModels.Confirm.OrderConfirmViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>OrderConfirmViewModel</h4>
    <hr />
    <dl class="col justify-content-center">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfCreation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOfCreation)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DeliveryDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeliveryDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DeliveryAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeliveryAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClientName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClientName)
        </dd>
        <dt class="col-sm-2">
            Tyres
        </dt>
        <dd class="col-sm-10">
            @foreach (var tyre in Model.Tyres)
            {
                <p>@tyre.Model</p>
                <p>@tyre.Brand</p>
                <p>@tyre.Price</p>
                <p>@tyre.Quantity</p>
            }
        </dd>

        <dt class="col-sm-2">
            WheelRims
        </dt>
        <dd class="col-sm-10">
            @foreach (var wheelRim in Model.WheelRims)
            {
                <p>@wheelRim.Model</p>
                <p>@wheelRim.Brand</p>
                <p>@wheelRim.Price</p>
                <p>@wheelRim.Quantity</p>
            }
        </dd>

        <dt class="col-sm-2">
            MotorOils
        </dt>
        <dd class="col-sm-10">
            @foreach (var motorOil in Model.MotorOils)
            {
                <p>@motorOil.Model</p>
                <p>@motorOil.Brand</p>
                <p>@motorOil.Price</p>
                <p>@motorOil.Quantity</p>
            }
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Comment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Comment)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sum)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sum)
        </dd>
    </dl>
</div>
<div>
   
    <p><a href="/ShoppingBag/Index">ShoppingBag</a></p>
    <p></p>

    <form asp-action="Complete" asp-controller="Order" method="Post">
        <input type="hidden" value="@Model.Id" name="orderId" />
        <input type="submit" value="Confirm Order" class="btn btn-primary" />
    </form>
</div>
