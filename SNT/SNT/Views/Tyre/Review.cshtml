<button class="btn btn-primary text-white font-weight-bold" data-toggle="modal" data-target="#addToBagModal">AddToBag</button>
<div class="modal fade" id="addToBagModal" tabindex="-1" role="dialog" aria-labelledby="addToBagModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addToBagModalLabel">AddToBag - @Model.Id</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="addtobag-form" action="Tyre/AddToBag" method="post">
                    <div class="form-group">
                        <label for="quantity" class="col-form-label font-weight-bold">Quantity:</label>
                        <input type="number" class="form-control" id="quantity">
                        <input type="hidden" value="@Model.Id" name="tyreId" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="addtobag-button">Complete</button>
            </div>
        </div>
    </div>
</div>

