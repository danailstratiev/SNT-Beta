<div class="modal fade" id="addToBagModal" tabindex="-1" role="dialog" aria-labelledby="addToBagModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addToBagModalLabel">AddToBag - @Model.Model</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="order-form" action="/Tyre/AddToBag" method="post">
                    <div class="form-group">
                        <label for="quantity" class="col-form-label font-weight-bold">Quantity:</label>
                        <input type="number" class="form-control" id="quantity" name="quantity">
                        <input type="hidden" value="@Model.Id" name="tyreId" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="complete-order-button">Complete</button>
            </div>
        </div>
    </div>
</div>

<form asp-action="AddToBag" asp-controller="Tyre" method="POST">
    <label asp-for="Quantity" class="control-label"></label>
    <input asp-for="Quantity" class="form-control" />
    <input type="hidden" value="@Model.Id" name="tyreId" />
    <input type="submit" value="Add" class="btn btn-primary" />
</form>

